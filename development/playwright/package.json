{
  "name": "jelly-playwright",
  "version": "1.0.0",
  "description": "Playwright-based browser automation CLI for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pw": "dist/bin/pw.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "pw": "npx tsx bin/pw.ts",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "playwright",
    "browser-automation",
    "e2e-testing",
    "web-scraping",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
