{
  "name": "slack-skill",
  "description": "Comprehensive Slack platform development skill for app creation, API integration, and UI components",
  "version": "1.0.0",
  "category": "platform-integration",
  "tags": ["slack", "api", "messaging", "bot", "integration", "webhook"],
  "author": "Claude Code",
  "license": "MIT",
  "homepage": "https://api.slack.com",
  "main": "index.js",
  "dependencies": {
    "@slack/web-api": "^6.9.0",
    "@slack/bolt": "^3.14.0",
    "@slack/oauth": "^3.1.0",
    "@slack/events-api": "^3.0.1"
  },
  "supportedLanguages": ["javascript", "python", "java"],
  "capabilities": [
    "web-api-calls",
    "events-api-handling",
    "block-kit-ui",
    "oauth-authentication",
    "interactive-components",
    "modals-and-views",
    "workflow-steps",
    "message-posting"
  ],
  "environment": ["node", "python3", "java8+"],
  "entryPoints": {
    "javascript": "src/js/index.js",
    "python": "src/python/app.py",
    "java": "src/java/App.java"
  },
  "configuration": {
    "requiredEnvVars": [
      "SLACK_BOT_TOKEN",
      "SLACK_SIGNING_SECRET",
      "SLACK_CLIENT_ID",
      "SLACK_CLIENT_SECRET"
    ],
    "optionalEnvVars": [
      "SLACK_STATE_STORE_SECRET",
      "SLACK_REDIRECT_URI",
      "SLACK_LOG_LEVEL"
    ]
  },
  "templates": {
    "basic-app": "templates/basic-app",
    "message-bot": "templates/message-bot",
    "workflow-app": "templates/workflow-app",
    "enterprise-app": "templates/enterprise-app"
  }
}